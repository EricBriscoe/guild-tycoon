{
  "name": "guild-tycoon",
  "version": "0.1.0",
  "description": "Discord guild tycoon: collaborative widget maker game using components v2",
  "main": "dist/bot.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "start": "npm run build && node dist/bot.js",
    "register": "npm run build && node dist/register-commands.js",
    "dev": "nodemon --watch src --ext ts,json --exec \"npm run build && node dist/bot.js\"",
    "dev:register": "npm run build && node dist/register-commands.js",
    "migrate": "npm run build && node dist/scripts/migrate-sqlite-to-postgres.js"
  },
  "dependencies": {
    "discord.js": "^14.22.1",
    "dotenv": "^16.4.5",
    "fast-deep-equal": "^3.1.3",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.0",
    "sql.js": "^1.10.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
